<image src="../../image/background/cool-background2.png" mode="widthFix" class="backImg" style="width:100%;">
</image>

<!-- 检查登录  -->
<view style="margin:280rpx auto;text-align:center" wx:if="{{!nickName}}">
	<view class="padding">
		<view class="cu-avatar xl round"
			style="background-image:url(https://thirdwx.qlogo.cn/mmopen/vi_32/Q0j4TwGTfTJuqVss6FgN8AbND89vHtK3oZrZibV1ibvsW9bY4mxtIib25KXaFCLSUejY6icGbj4YuxqTXPXLyxVMFA/132);"></view>
	</view>
	<view class="padding flex flex-direction">
		<button class="cu-btn bg-red margin-tb-sm lg" open-type="getUserInfo" bindgetuserinfo="getuserinfo">点击授权登录</button>
	</view>
  
	<!-- <view class="padding flex flex-direction">
		<button class="cu-btn bg-red margin-tb-sm lg"  bindtap="toUserAgreement">用户协议</button>
	</view> -->
	<!-- <button class="cu-btn text-sm" bindtap="toUserAgreement">用户协议</button> -->
	<navigator class="text-sm" url="../../pages/personal/userAgreement/userAgreement">用户协议</navigator>

</view>


<!-- 登录  -->
<block wx:else>
	<image class="avatar" src="{{avatarUrl}}"></image>
	<view class="text-center">{{nickName}}</view>


	<view class="cu-list menu card-menu margin-top-xl margin-bottom-xl shadow-lg radius">

		<view class="cu-item arrow">
			<navigator class="content" url="./record/record" open-type="navigate" hover-class="none">
				<text class="cuIcon-formfill text-green"></text>
				<text class="text-grey">我的密码本</text>
			</navigator>
		</view>
		<view class="cu-item arrow">
			<navigator class="content" url="./form/form" open-type="navigate" hover-class="none">
				<text class="cuIcon-writefill text-cyan"></text>
				<text class="text-grey">完善信息</text>
			</navigator>
		</view>
		<view class="cu-item arrow" bindtap="clearstorage">
			<button class="cu-btn content">
				<text class="cuIcon-check text-orange"></text>
				<text class="text-grey">清理缓存</text>
			</button>
		</view>
		<view class="cu-item arrow">
			<view class="content" bindtap="showQrcode">
				<text class="cuIcon-appreciatefill text-red"></text>
				<text class="text-grey">赞赏支持</text>
			</view>
		</view>

	</view>


	<view class="cu-list menu card-menu margin-top-xl margin-bottom-xl shadow-lg radius">
		<view class="cu-item arrow">
			<navigator class="content" url="./about/about" open-type="navigate" hover-class="none">
				<image src="../../image/icon/icon.png" class="png" mode="aspectFit"></image>
				<text class="text-grey">关于</text>
			</navigator>
		</view>
		<view class="cu-item arrow">
			<button class="cu-btn content" open-type="feedback">
				<text class="cuIcon-writefill text-cyan"></text>
				<text class="text-grey">意见反馈</text>
			</button>
		</view>
		<view class="cu-item arrow">
			<view class="content" bindtap="showqq">
				<image src="../../image/icon/qq.png" class="png" mode="aspectFit"></image>
				<text class="text-grey">QQ群聊</text>
			</view>
		</view>
		

	</view>

</block>