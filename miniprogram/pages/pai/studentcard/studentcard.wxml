<view class="bg-white padding">
  <view class="cu-steps">
    <view class="cu-item  text-blue" wx:for="{{numList}}">
      <text class="num {{index==3?'err':''}}" data-index="{{index + 1}}"></text> {{item.name}}
    </view>
  </view>
</view>
 
<view class="imagesize">
  <image src='{{bigImg}}' bindtap="xaingce" class="png" mode="widthFix"></image>
</view>

<form bindsubmit="searchOwner">
  <view class="cu-form-group margin-top">
    <view class="title">姓名：</view>
    <input name="studentcardName" value="{{studentcardName}}"/>
  </view>
  <view class="cu-form-group">
    <view class="title">学院：</view>
    <input name="studentcardXueyuan" value="{{studentcardXueyuan}}"/>
  </view>
  <view class="cu-form-group">
    <view class="title">学号：</view>
    <input name="studentcardID" value="{{studentcardID}}"/>
  </view>
  <view class="fix-bottom text-center full margin-top">
                  <button class="cu-btn text-sm" >识别若有错误，请手动修改</button>
            </view>
  <view class="padding flex flex-direction">
    <button formType="submit" class="cu-btn bg-blue margin-tb-sm lg">查找失主</button>
  </view>
</form>