<!--miniprogram/pages/list/list.wxml-->
<view class="uploader">
	<scroll-view scroll-y>
		<block wx:if="{{userList.length != 0}}">
			<view wx:for="{{userList}}" wx:key="{{item._id}}" class="userlist">
				<block wx:if="{{item._openid != myId}}">
					<navigator url="../chatroom/chatroom?getopenid={{item._openid}}&getnickname={{item.nickName}}"
						open-type="navigate" class="uploader-text">
						<image class="avatar" src="{{item.avatarUrl}}" mode="scaleToFill"></image>
						<text>{{item.nickName}}</text>
					</navigator>
				</block>
			</view>
		</block>
		<block wx:else>
			<text>未找到用户</text>
		</block>
	</scroll-view>
</view>