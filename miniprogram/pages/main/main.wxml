<!--pages/photo/photo.wxml-->
<view style="height:520rpx; ">
	<swiper swiperTitle="{{swiperTitle}}" swiperList="{{swiperList}}"></swiper>
</view>
<navbar navList="{{navList}}" bindgetnavitem="getitem"></navbar>

<view>
	<!-- 技能分享 -->
	<block wx:if="{{TabCur ==  1}}" class="margin-top">
		
		<block wx:for="{{articleList}}" wx:key="article" class="margin-top">
			<navigator class="cu-bar bg-white solid-bottom " url="../article/article?id={{item._id}}" open-type="navigate">
				<view class="action">
					<text class="cuIcon-titles text-orange"></text>
					<view class="text-cut  radius" style="width:100px">{{item.title}}</view>
				</view>
				<view class="action">
					<view class="cu-tag round bg-orange light">{{item.tag}}</view>
				</view>
			</navigator>
		</block>
		
	</block>
	

	<!--  丢失分类 -->
	<block wx:if="{{TabCur == 0}}">
		<grid iconList="{{iconList}}"> </grid>
	</block>

</view>