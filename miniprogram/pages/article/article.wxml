<view class="bg-white padding-lr">
	<view class="padding-xs flex align-center">
		<view class="flex-sub text-center">
			<view class="solid-bottom text-xl padding">
				<text class="text-black text-bold">{{title}}</text>
			</view>
			<view class="padding">
				<text>作者：{{nickname}}</text>
				<text class="margin-left">时间：{{time}}</text>
			</view>
		</view>
	</view>
	<!-- 图片 -->
	<view class="cu-card case">
		<view class="image">
			<image src="{{image}}" mode="widthFix"></image>
			<view class="cu-tag bg-blue">{{tag}}</view>
		</view>
	</view>

	<!-- 内容 -->
	<block wx:for="{{content}}" wx:key="cont">
		<view class="cont">
			{{item}}
		</view>
	</block>
	<view class="text-gray text-sm text-right padding">
		<text class="cuIcon-attentionfill margin-lr-xs"></text>{{view}}
		<text class="cuIcon-appreciatefill margin-lr-xs"></text> {{zan}}
		<text class="cuIcon-messagefill margin-lr-xs"></text> {{cnumber}}
	</view>

	<view class="cu-item text-blue cuIcon-creative">
		<view class="content bg-cyan shadow-blur">
			<view class="content  padding-left margin-top">
				如果遇到问题，你可以
				<button class="cu-btn " open-type="contact">
					<text class="text-lg text-blue" bindcontact="handleContact">联系我们</text>
				</button>
			</view>
		</view>
	</view>
